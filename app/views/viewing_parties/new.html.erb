<h1>Create a Viewing Party</h1>

<%= form_with url: "/users/#{@user.id}/movies/#{@movie.id}/viewing_parties", local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :email, value: @movie.title %><br>
  <%= form.label :time %>
  <%= form.text_field :time, required: true %><br>
  <%= form.label :date %>
  <%= form.text_field :date, required: true %><br>
  <%= form.label :duration %>
  <%= form.text_field :duration, required: true %><br>
  <%= form.submit "Create Viewing Party" %>
<% end %>
